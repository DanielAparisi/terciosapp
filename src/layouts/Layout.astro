---
interface  Props {
	description : string,
	title : string
}

const {description, title} = Astro.props


import Header from '../components/Header.astro'
import './src/styles/global.css'
import '@fontsource-variable/onest';

---
<!doctype html>
<html lang="en">
	<head>
      <link rel="icon" type="image/svg+xml" href="/public/tercioslogo.svg">
      <meta charset="UTF-8" />
      <meta name="viewport" content="width=device-width" />
      
      <title>LOS TERCIOS</title>
	</head>	
	<body>
		<div class="relative h-full w-full bg-neutral-900"><div class="absolute inset-0 bg-fuchsia-400 bg-[size:20px_20px] opacity-20 blur-[100px]"></div></div>
      <Header/>	
      <slot />
	</body>
</html>
<style is:global>
	:root{
		color-scheme: dark;
	}

	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		font-family: 'onest Variable', system-ui, sans-serif;
		scroll-behavior: smooth;
		color: rgba(255, 255, 255, 0.87);
		
	}

	p {
		color: rgba(255,255, 255, 0.9);
		line-height: 1.4;
		margin-bottom: 1em;
		font-weight: 100;
		font-size: 1em;
		letter-spacing: .5px;
	}
	
	p strong{
		color: white;
		font-weight: 700;
	}

</style>

