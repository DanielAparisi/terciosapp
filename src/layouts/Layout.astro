---
interface  Props {
	description : string,
	title : string
}

const {description, title} = Astro.props


import Header from '../components/Header.astro'
import './src/styles/global.css'
import '@fontsource-variable/onest';

---
<!doctype html>
<html lang="en">
	<head>
      <link rel="icon" type="image/svg+xml" href="/public/tercioslogo.svg">
      <meta charset="UTF-8" />
      <meta name="viewport" content="width=device-width" />
      
      <title>LOS TERCIOS</title>
	</head>	
	<body>
		<div class="absolute top-0 z-[-2] h-screen w-screen rotate-180 transform bg-white bg-[radial-gradient(60%_120%_at_50%_50%,hsla(0,0%,100%,0)_0,rgba(252,205,238,.5)_100%)]"></div>
      <Header/>	
      <slot />
	</body>
</html>
<style is:global>
	:root{
		color-scheme: dark;
	}

	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		font-family: 'onest Variable', system-ui, sans-serif;
		scroll-behavior: smooth;
		color: #242424;
		
	}

	p {
		color: #242424;
		line-height: 1.4;
		margin-bottom: 1em;
		font-weight: 100;
		font-size: 1em;
		letter-spacing: .5px;
	}
	
	p strong{
		color: #242424;
		font-weight: 700;
	}

</style>

