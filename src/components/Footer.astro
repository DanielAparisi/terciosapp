---
import Mail from "./mail.astro";
import Youtube from "./Youtube.astro"
import Tiktok from "./Tiktok.astro"
import Spotify from "./Spotify.astro"
import Instagram from "./Instagram.astro"
---

<footer class="bg-white rounded-lg shadow-sm dark:bg-gray-900 m-4">
    <div class="w-full max-w-screen-xl mx-auto p-4 md:py-8">
        <div class="sm:flex sm:items-center sm:justify-between">
            <a href="#" class="flex items-center mb-4 sm:mb-0 space-x-3 rtl:space-x-reverse">
                <img src="../../public/TerciosImg.svg" class="h-8" alt="Flowbite Logo" />
                <span class="self-center text-2xl font-semibold whitespace-nowrap dark:text-white">LOS TERCIOS</span>
            </a>
            <ul class="flex flex-wrap items-center mb-6 text-sm font-medium text-gray-500 sm:mb-0 dark:text-gray-400">
                <li>
                    <a href="#" class="hover:underline me-4 md:me-6">Sobre</a>
                </li>
                <li>
                    <a href="#" class="hover:underline me-4 md:me-6">Politicas</a>
                </li>
                <li>
                    <a href="#" class="hover:underline me-4 md:me-6">Licencia</a>
                </li>
                <li>
                    <a href="#" class=" hover:scale-125">
                        <Mail/>
                    </a>
                </li>
            </ul>
        </div>
        <hr class="my-6 border-gray-200 sm:mx-auto dark:border-gray-700 lg:my-8" />
         <article class="flex justify-center items-center gap-8 mb-2">
            <Spotify/>
            <Instagram/>
            <Youtube/>
            <Tiktok/>
        </article>
    </div>
</footer>